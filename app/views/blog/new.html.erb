<%= form_for @blog do |f| %>
<div class="from-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="from-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %>
</div>

<div class="">
